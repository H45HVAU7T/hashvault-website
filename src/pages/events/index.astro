---
import MainLayout from "../../layouts/MainLayout.astro";
import EventCard from "../../components/EventCard.astro";

const events = [
  {
    id: "1",
    name: "PwnParty 2025",
    mode: "team",
    categories: ["Pwn", "Reversing", "Crypto"],
    start: "2025-07-01T10:00:00Z",
    end: "2025-07-03T22:00:00Z",
    image: "../../src/assets/camera.avif",
  },
  {
    id: "2",
    name: "HackFest Summer Edition",
    mode: "solo",
    categories: ["Web", "Forensics", "OSINT"],
    start: "2025-07-05T08:00:00Z",
    end: "2025-07-07T20:00:00Z",
    image: "../../src/assets/lock.avif",
  },
  {
    id: "3",
    name: "CTFZone Qualifiers",
    mode: "team",
    categories: ["Crypto", "Misc", "Hardware"],
    start: "2025-07-10T14:00:00Z",
    end: "2025-07-12T18:00:00Z",
    image: "../../src/assets/camera.avif",
  },
];
---

<MainLayout>
  <div class="flex h-screen flex-col gap-2 lg:gap-2 lg:px-12 lg:py-6 lg:pb-12">
    <div class="flex flex-col gap-6 py-6 lg:mx-24">
      <h1 class="font-brutal text-center text-4xl uppercase">EVENTS</h1>
      <div class="grid auto-rows-fr grid-cols-1 gap-4 px-4 sm:grid-cols-2">
        {
          events?.map((event) => (
            <EventCard
              name={event.name}
              mode={event.mode}
              categories={event.categories}
              start={event.start}
              end={event.end}
              backgroundImageUrl={event.image}
            />
          ))
        }
      </div>
      <div></div>
    </div>
  </div></MainLayout
>
