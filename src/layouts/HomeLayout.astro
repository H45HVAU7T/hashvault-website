---
import "../styles/global.css";
import "@fontsource/archivo-black";
import "@fontsource-variable/geist-mono";
import { Image } from "astro:assets";
import background from "@/assets/background.avif"
---

<!doctype html>
<html lang="en h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#0d0b0e" />
    <link
      rel="stylesheet"
      type="text/css"
      href="https://cdn.jsdelivr.net/npm/@phosphor-icons/web@2.1.2/src/bold/style.css"
    />
    <title>Hashvault</title>
  </head>
  <body
    class="bg-hash-black relative h-full p-2 text-white lg:min-h-screen xl:p-4"
    style="min-height: 100dvh;"
  >
    <!-- Background image -->
    <Image
      src={background}
      alt="background"
      class="pointer-events-none absolute inset-0 -z-10 h-full w-full object-cover"
    />

    <!-- Content container -->
    <div class="border-hash-purple flex min-h-full flex-col border-2">
      <slot />
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
