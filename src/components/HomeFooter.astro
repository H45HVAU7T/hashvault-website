---
import HashFill from "./HashFill.astro";
import Date from "./Date.astro";
import Time from "./Time.astro";
---

<div class="h-28 w-full backdrop-blur-xs flex items-start relative">
  <div class="border-hash-purple h-full border-r-2 px-5 py-4 flex flex-col gap-2 overflow-hidden">
    <div class="w-full flex items-center gap-2">
      <h3 class="font-brutal text-sm whitespace-nowrap">WHO WE ARE</h3>
      <HashFill />
    </div>

    <div class="flex flex-col items-start max-w-2xl">
      <p class="font-mono text-xs hyphens-auto text-justify">
        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
      </p>
    </div>
  </div>

  <!-- <div
    class="border-hash-purple border-r-2 h-28 w-1 absolute bottom-0"
    style="left: calc(min(100%, 768px) + 230px);">
  </div> -->
  

  <div class="border-r-2 border-hash-purple ">
    <div class="border-hash-purple px-5 py-4 flex flex-col gap-2 overflow-hidden">
      <div class="w-full flex items-center gap-2">
        <h3 class="font-brutal text-xs whitespace-nowrap">DATE</h3>
        <HashFill />
      </div>
      <Date/>
    </div>

    <div>
      <Time/>
    </div>

  </div>
</div>