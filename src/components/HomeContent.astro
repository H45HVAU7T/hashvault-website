---
const getStarted = "/vault";
const joinUs = "https://forms.gle/LkFCZuFvC6ryiiaF8";
const openComms = "https://discord.gg/3YXya6dgxq";
---

<div class="border-hash-purple relative flex h-full grow flex-col justify-center overflow-hidden border-t-2 border-b-2">
  <div
    class="absolute inset-0 grid pointer-events-none
           grid-rows-3 md:grid-rows-1 md:grid-cols-3"
  >
    <div class="column-bg bg-hash-purple/20 animate-key1"></div>
    <div class="column-bg bg-hash-purple/20 animate-key2"></div>
    <div class="column-bg bg-hash-purple/20 animate-key3"></div>
  </div>

  <div class="pointer-events-none absolute inset-0 hidden md:grid md:grid-cols-3">
    <div class="relative"></div>
    <div class="relative border-r-2 border-l-2 border-hash-purple"></div>
    <div class="relative"></div>
  </div>

  <div
    class="bg-hash-black/30 font-brutal glass-noise mt-6 grid text-center text-2xl font-black backdrop-blur-sm backdrop-saturate-150 md:mt-0
           grid-rows-3 md:grid-rows-1 md:grid-cols-3"
  >
    <a
      class="hover:bg-hash-black active:bg-hash-black/70 relative z-[1] transition-all hover:z-[2] hover:scale-[1.02] active:scale-[0.99] md:duration-100 xl:duration-200"
      href={joinUs}
      target="_blank"
      rel="noopener noreferrer"
    >
      <div
        class="border-hash-purple hover:drop-shadow-[0px_0px_30px_theme(colors.hash-purple)] relative border-t-2 border-dashed py-6 hover:border-r-2 hover:border-solid active:border-r-0 active:drop-shadow-none md:border-b-2 md:py-[22%]"
      >
        JOIN US
      </div>
    </a>

    <a
      class="hover:bg-hash-black active:bg-hash-black/70 relative z-[1] transition-all hover:z-[2] hover:scale-[1.02] active:scale-[0.99] md:duration-100 xl:duration-200"
      href={getStarted}
    >
      <div
        class="border-hash-purple hover:drop-shadow-[0px_0px_30px_theme(colors.hash-purple)] relative border-t-2 border-b-2 border-dashed py-6 hover:border-solid active:drop-shadow-none md:border-2 md:py-[22%]"
      >
        GET STARTED
      </div>
    </a>

    <a
      class="hover:bg-hash-black active:bg-hash-black/70 relative z-[1] transition-all hover:z-[2] hover:scale-[1.02] active:scale-[0.99] md:duration-100 xl:duration-200"
      href={openComms}
      target="_blank"
      rel="noopener noreferrer"
    >
      <div
        class="border-hash-purple hover:drop-shadow-[0px_0px_30px_theme(colors.hash-purple)] relative border-b-2 border-dashed py-6 hover:border-l-2 hover:border-solid active:border-l-0 active:drop-shadow-none md:border-t-2 md:py-[22%]"
      >
        OPEN COMMS
      </div>
    </a>
  </div>
</div>

<style>
  .column-bg {
    opacity: 0;
    transition: opacity 0.25s ease-out;
  }

  @keyframes pianoTap {
    0% {
      opacity: 0;
    }
    10% {
      opacity: 0.5;
    }
    30% {
      opacity: 0;
    }
    100% {
      opacity: 0;
    }
  }

  .animate-key1 {
    animation: pianoTap 1.2s ease-out forwards;
    animation-delay: 0.4s;
  }
  .animate-key2 {
    animation: pianoTap 1.2s ease-out forwards;
    animation-delay: 0.55s;
  }
  .animate-key3 {
    animation: pianoTap 1.2s ease-out forwards;
    animation-delay: 0.7s;
  }
</style>
